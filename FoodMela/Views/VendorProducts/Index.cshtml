@model IEnumerable<FoodMela.Models.Product>

@{
    ViewData["Title"] = "My Products";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">My Products</h2>
    <a asp-action="Create" class="btn btn-primary">➕ Add New Product</a>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-lg-3 mb-4">
            <div class="card h-100 custom-card">
                @if (!string.IsNullOrEmpty(item.ImagePath))
                {
                    <img src="@item.ImagePath" class="card-img-top"
                         alt="@item.Name" style="height: 180px; object-fit: cover;" />
                }
                else
                {
                    <div class="bg-light text-center d-flex align-items-center justify-content-center"
                         style="height: 180px;">
                        <span class="text-muted">No Image</span>
                    </div>
                }

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text text-muted">@item.Description</p>
                    <p class="fw-bold text-primary">@item.Price.ToString("C")</p>

                    <div class="mt-auto">
                        <a asp-action="Edit" asp-route-id="@item.Id"
                           class="btn btn-sm btn-warning me-2">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id"
                           class="btn btn-sm btn-danger">Delete</a>
                    </div>
                    <div>
                    <span class="badge
                    @(item.Status == ProductStatus.Pending ? "bg-warning text-dark" :
                                                      item.Status == ProductStatus.Approved ? "bg-success" : "bg-danger")">
                        @item.Status
                    </span>
                    </div>
                    
                </div>
            </div>
        </div>
    }
</div>

@section Styles {
    <style>
        .custom-card {
            background-color: #f8f9fa; /* light grey background */
            border: none;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

            .custom-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 16px rgba(0,0,0,0.2);
            }
    </style>
}
